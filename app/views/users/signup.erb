<div class="display">
<h1>Sign Up</h1>
    <% if @errors.nil? %>
        <% @errors = {} %>
    <% end %>
<form action="/signup" method="POST">
    <% if !!@errors[:name] %>
        <p style="color: red; font-size: 12px;"><%= @errors[:name] %></p>
    <% end %>
    <label for="name">Name: </label>
        <input type="text" name="name" <% if !!@name %> value="<%= @name %>" <% end %>><br>
    <% if !!@errors[:username] %>
        <p style="color: red; font-size: 12px;"><%= @errors[:username] %></p>
    <% end %>
    <label for="username">Username: </label>
        <input type="text" name="username" <% if !!@username %> value="<%= @username %>" <% end %>><br>
    <% if !!@errors[:password] %>
        <p style="color: red; font-size: 12px;"><%= @errors[:password] %></p>
    <% end %>
    <label for="password">Password: </label>
        <input type="password" name="password" <% if !!@password %> value="<%= @password %>" <% end %>><br>
    
    <input type="submit" id="submit" value="Sign Up">
</form>
</div>