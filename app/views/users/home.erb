<% @user = Helper.current_user(session) %>
<h1>Welcome <%= @user.username %></h1>

<h2>View Points By Horse</h2>
    <ul>
        <% @user.horses.each do |horse| %>
            <li><%= horse.name %>: <%= horse.point_total %></li>
        <% end %>
    </ul>

<h2>View Points By Horse Show</h2>
    <ul>
        <% @user.horseshows.uniq.each do |show| %>
            <li><a href="/horseshows"><%= show.name %></a></li>
        <% end %>
    </ul>

