<div class="display"><h1>Edit Prize</h1>
  <% if !!@duplicate_error %>
    <div id="error">
      <%= @error %>
    </div>
  <% end %>
  <form action="/prizes/<%= @prize.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <h3>Horses:</h3><br>
      <% if !!@errors[:horse] %>
        <div id="error">
          <%= @errors[:horse] %>
        </div>
      <% end %>
      <% current_user.horses.each do |horse| %>
        <%= horse.name %><input id="<%= horse.name %>" type="radio" name="horse_id" value="1" <%='checked' if @prize.horse_id == horse.id %>><br>
      <% end %>
    <br>

  <button><a href="/horses/new">Add Horse</a></button>

  <h3>Horse Show:</h3>

      <% sort_horseshows_from_current_user.each do |show| %>
          <input id="<%= show.name %>" type="checkbox" name="horseshow[id]" value="1" <%='checked' if @prize.horseshow_id == show.id %>><%= show.name %> - <%= show.format_date %><br>
      <% end %>
    <br>
  
  <h4>Add Show</h4>
    <% if !!@errors[:horseshow_name] %>
      <div id="error">
        <%= @errors[:horseshow_name] %>
      </div>
    <% end %>

    <label for="horseshow_name">Name:</label>
      <input type="text" name="horseshow[name]" id="horseshow_name"></br>
    
    <% if !!@errors[:location] %>
      <div id="error">
        <%= @errors[:location] %>
      </div>
    <% end %>

    <label for="horseshow_location">Location: </label>
      <input type="text" name="horseshow[location]" id="horseshow_location"></br>
    
    <% if !!@errors[:date] %>
      <div id="error">
        <%= @errors[:date] %>
      </div>
    <% end %>
    
    <label for="horseshow_date">Date: </label>
      <input type="date" name="horseshow[date]" id="horseshow_date"></br>
    <br>
  
  <h3>Point Total:</h3>
      <% if !!@errors[:points] %>
      <div id="error">
        <%= @errors[:points] %>  
      </div>
      <% end %>

    <input type="text" name="point_total" id="point_total" value="<%= @prize.point_total %>"><br>
  <input type="submit" id="submit" value="Update">
  </form>
</div>