<nav>
    <button class="home"><a href="/"><strong>Home</strong></a></button>
    <button class="logout"><a href="/logout"><strong>Logout</strong></a></button>
</nav>

<div class="display">
    <h1>All Prizes</h1>
        <% sort_horseshows_from_current_user.each do |horseshow| %>
            <h3><%= horseshow.format_date %>: <%= horseshow.name %></h3>
                <% horseshow.prizes.each do |prize| %>
                    
                <%= Horse.find_by(id: prize.horse_id).name%>: <%= prize.point_total %> points 
                <button><a href="/prizes/<%= prize.id %>">Edit/Remove</a></button><br>
                <%end%>
            <% end %>
    <br>
    <button><a href="/prizes/new">Add Prize</a></button><br>
</div>