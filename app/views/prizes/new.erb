<div class="display">
<h1>Add Prize</h1>
    <% if !!@duplicate_error %>
        <div id="error">
            <%= @error %>
        </div>
    <% end %>

<form action="/prizes" method="post">
    <h3>Horse</h3>
    <% if !!@errors[:horse] %>
        <div id="error">
            <%= @errors[:horse] %>
        </div>
    <% end %>
        <% current_user.horses.each do |horse| %>
            <%= horse.name %><input id="<%= horse.name %>" type="checkbox" name="horse_id" value="<%= horse.id %>"><br>
        <% end %>

        <a href="/horses/new">Add Horse</a>

    <h3>Horse Show: </h3>

        <% sort_horseshows_from_current_user.each do |show| %>
            <input id="<%= show.name %>" type="checkbox" name="horseshow[id]" value="<%= show.id %>"><%= show.name %> - <%= show.format_date %><br>
        <% end %>
    <br>
    <h4>Add Show</h4>
    
    <label>Name: </label><br>
    <% if !!@errors[:horseshow_name] %>
        <div id="error">
            <%= @errors[:horseshow_name] %>
        </div>
    <% end %>
        <input type="text" name="horseshow[name]" id="horseshow_name"><br>
    
    <label>Date: </label><br>
    <% if !!@errors[:date] %>
        <div id="error">
            <%= @errors[:date] %>
        </div>
    <% end %>
        <input type="date" name="horseshow[date]" id="horseshow_date" placeholder="mm/dd/yy"><br>
    
    <label>Location: </label><br>
    <% if !!@errors[:location] %>
        <div id="error">
            <%= @errors[:location] %>
        </div>
    <% end %>
        <input type="text" name="horseshow[location]" id="horseshow_location"><br>

    <h3>Add Points: </h3>
    <% if !!@errors[:points] %>
        <div id="error">
            <%= @errors[:points] %>
        </div>
    <% end %>
        <input type="text" name="point_total" id="points_value"><br>
    
    <input type="submit" id="submit" value="Add Prize">
</form>
</div>